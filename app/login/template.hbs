<div class="section">
  <div class="container">
    <h2 class="form__heading">Login</h2>

    <div class="form-container">
      {{#link-to "register" class="form__sub-heading"}}Don't have an account? Sign up here.{{/link-to}}
      {{#with (changeset model validator) as |changeset|}}
      <form {{action "authenticate" changeset on="submit"}}>
        {{validated-input placeholder="Username" changeset=changeset propertyName="username"}}
        {{validated-input placeholder="Password" changeset=changeset propertyName="password" type="password"}}
        <div class="btn__grid">
          {{#link-to "event" class="btn btn-back"}}Back{{/link-to}}
          <button type="submit" name="Go" class="btn btn-go">Go!</button>
        </div>
      </form>
      {{/with}}
    </div>
  </div>
</div>

{{outlet}}

<div class="section">
  <div class="container">
    <h2 class="form__heading">Add your space.</h2>

    {{#with (changeset model validator) as |changeset|}}
    <form class="form" method="post" {{action "saveSpace" changeset on="submit"}}>
      {{file-picker action=(action (mut changeset.spaceImg)) propertyName="spaceImg"}}
      {{validated-input placeholder="Name" changeset=changeset propertyName="name"}}
      {{validated-input type="search" placeholder="Location" changeset=changeset propertyName="location"}}
      {{validated-input textarea=true placeholder="Description" changeset=changeset propertyName="description"}}
      <div class="btn__grid">
        {{#link-to "index" class="btn btn-back"}}Back{{/link-to}}
        <button type="submit" name="Go" class="btn btn-go">Submit</button>
      </div>
    </form>
    {{/with}}
  </div>
</div>

{{outlet}}
